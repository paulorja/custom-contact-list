= form_for(@field) do |f|
  - if @field.errors.any?
    #error_explanation
      %h2
        = pluralize(@field.errors.count, "error")
        prohibited this field from being saved:
      %ul
        - @field.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :name
    %br/
    = f.text_field :name, class: 'form-control'

  - if edit_screen
    .form-group{style: 'color:red'}
      Field type can not be edited
  - if create_screen
    .field
      = f.label :field_type
      %br/
      = f.select :field_type, Field.field_types.map { |key, value| [key.humanize, value] }

  .actions
    = f.submit class: 'btn btn-success'
